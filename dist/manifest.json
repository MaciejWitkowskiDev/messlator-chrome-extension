{
    "manifest_version": 2,
	"name":    "Messlator",
	"description": "A simple extension to translate messenger.com messages to spanish.",
    "version": "0.1",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Messlator"
    },
    "permissions":
	[
		"*://*/*",
		"activeTab"
	]
}
